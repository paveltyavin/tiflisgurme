<div class="modal-content">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-5">
                {{#if thumb}}
                    <div class="container_image">
                        <img src="{{thumb}}" alt="">
                    </div>
                {{/if}}
            </div>
            <div class="col-md-6">
                <div class="container_name">
                    <div class="name">{{name}}</div>
                </div>
                <div class="container_desc">
                    <div class="container_buy">
                        <img src="/static/svg/minus_white.svg" class="remove" alt="">
                        <div class="quantity">{{quantity}}</div>
                        <img src="/static/svg/plus_white.svg" class="add" alt="">
                    </div>
                    <div class="price">
                        {{price}} {{currency}}.
                    </div>
                    <div class="desc">
                        {{desc}}
                    </div>
                    <div class="portion">
                        {{portion}}
                    </div>
                </div>
            </div>
            <div class="col-md-1 text-center">
                <div class="container_close">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <img src="/static/svg/close.svg">
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>